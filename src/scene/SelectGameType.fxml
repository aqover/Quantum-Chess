<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0">
         <children>
            <FlowPane alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #03A9F4;">
               <children>
                  <ImageView cache="true" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#handlerBack" pickOnBounds="true" preserveRatio="true" scaleX="0.75" scaleY="0.75">
                     <image>
                        <Image url="back.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <Label prefHeight="50.0" style="-fx-background-color: #03A9F4;" text="Start Game" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets left="15.0" />
                     </FlowPane.margin>
                  </Label>
               </children>
            </FlowPane>
            <Button layoutX="50.0" layoutY="90.0" mnemonicParsing="false" onMouseClicked="#handlerOffline" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #40c4ff;" text="Offline" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button disable="false" layoutX="50.0" layoutY="170.0" mnemonicParsing="false" onMouseClicked="#handlerOnline" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #40c4ff;" text="Online" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</fx:root>
