<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0">
         <children>
            <FlowPane alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #03A9F4;">
               <children>
                  <Label onMouseClicked="#handlerBack" prefHeight="50.0" style="-fx-background-color: #03A9F4;" text="&lt;-" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets left="15.0" />
                     </FlowPane.margin>
                  </Label>
                  <Label prefHeight="50.0" style="-fx-background-color: #03A9F4;" text="Offline" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets left="15.0" />
                     </FlowPane.margin>
                  </Label>
               </children>
            </FlowPane>
         </children>
      </Pane>
      <Label alignment="CENTER" layoutX="50.0" layoutY="70.0" prefHeight="40.0" prefWidth="200.0" text="Player A Name">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="50.0" layoutY="170.0" prefHeight="40.0" prefWidth="200.0" text="Player B Name">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="playerA" layoutX="50.0" layoutY="120.0" maxHeight="-Infinity" prefHeight="40.0" prefWidth="200.0" promptText="Player a">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <TextField fx:id="playerB" layoutX="50.0" layoutY="220.0" maxHeight="-Infinity" prefHeight="40.0" prefWidth="200.0" promptText="Player b">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Button layoutX="50.0" layoutY="320.0" onMouseClicked="#startGame" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #40C4FF;" text="Start Game" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
   </children>
</fx:root>
